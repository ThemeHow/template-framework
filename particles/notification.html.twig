{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
	<div class="g-notification {{ particle.class|e }}">
		{% if particle.title %}<h2 class="g-notification-title">{{ particle.title|raw }}</h2>{% endif %}
		{% if particle.subtitle %}<div class="g-notification-subtitle">
			{{ particle.subtitle|raw }}
		</div>
		{% endif %}
		{% if particle.readmore %}<a href="{{ particle.link|raw }}" class="button button-2">{{ particle.readmore|raw }}</a>{% endif %}
	</div>
{% endblock %}